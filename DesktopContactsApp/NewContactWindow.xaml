<Window x:Class="DesktopContactsApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Title="NewContactWindow" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name"/>
            <TextBox x:Name="txtName" Margin="0,0,0,5"/>
            <TextBlock Text="Email"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,5"/>
            <TextBlock Text="Phone"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,5"/>
            <Button Content="Save" Name="btnSave" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
